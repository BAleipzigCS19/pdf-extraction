<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.baleipzig.pdfextraction.controller.PdfPreviewIncludeController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="60.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="432.0" prefWidth="411.0">
         <children>
            <ImageView fx:id="pdfPreviewImageView" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="340.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="300.0" AnchorPane.topAnchor="0.0" />
            <Label fx:id="addFileLabel" layoutX="90.0" layoutY="162.0" text="PDF-Datei hinzufügen" />
         </children>
      </AnchorPane>
      <GridPane maxHeight="60.0" minHeight="60.0" GridPane.rowIndex="1">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Button fx:id="pageBackButton" mnemonicParsing="false" onAction="#onClickPageBack" text="&lt;-" />
            <Button fx:id="pageForwardButton" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onClickPageForward" text="-&gt;" GridPane.halignment="RIGHT" />
            <Label fx:id="pageIndexLabel" alignment="CENTER" text="Seitenzahl" GridPane.halignment="CENTER" />
            <Button fx:id="chooseFileButton" mnemonicParsing="false" onAction="#onClickChooseFile" text="Datei Auswählen" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
         </children>
      </GridPane>
   </children>
</GridPane>
