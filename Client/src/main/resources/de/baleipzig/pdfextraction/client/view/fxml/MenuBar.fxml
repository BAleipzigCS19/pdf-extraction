<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar fx:id="menuBar" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="de.baleipzig.pdfextraction.client.controller.MenuBarController" >
  <Menu fx:id="fileMenu" mnemonicParsing="false" text="%file" >
    <MenuItem fx:id="chooseFile" mnemonicParsing="false" onAction="#onChooseFile" text="%chooseFile"/>
  </Menu>
  <Menu fx:id="templateMenuID" mnemonicParsing="false" text="%templateMenu">
    <MenuItem fx:id="createTemplate" mnemonicParsing="false" onAction="#onCreateTemplate" text="%createTemplate"/>
    <MenuItem mnemonicParsing="false" onAction="#onShowTemplates" text="%showTemplates" />
  </Menu>
  <Menu mnemonicParsing="false" text="%document">
    <items>
      <MenuItem mnemonicParsing="false" onAction="#onSaveResultTemplate" text="%documentupload" />
    </items>
  </Menu>
  <Menu fx:id="languageMenuID" mnemonicParsing="false" text="%LanguageMenu">
    <MenuItem fx:id="deutsch" mnemonicParsing="false" onAction="#onChangeLanguageGerman" text="%changeLanguageGerman"/>
    <MenuItem fx:id="english" mnemonicParsing="false" onAction="#onChangeLanguageEnglish" text="%changeLanguageEnglish"/>
  </Menu>
  <Menu mnemonicParsing="false" text="%helpMenu">
    <MenuItem mnemonicParsing="false" text="%about"/>
  </Menu>
</MenuBar>
