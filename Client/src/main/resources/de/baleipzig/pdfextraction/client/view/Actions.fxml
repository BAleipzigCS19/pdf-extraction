<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="800.0" prefWidth="1050.0" vgap="10.0"
          xmlns="http://javafx.com/javafx/17"
          fx:controller="de.baleipzig.pdfextraction.client.controller.ActionController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <GridPane GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints minHeight="10.0" prefHeight="30.0"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0"/>
            </rowConstraints>
            <children>
                <CheckBox fx:id="createTerminationCheckBox" mnemonicParsing="false" text="Kündigung erstellen"
                          GridPane.rowIndex="1"/>
            </children>
        </GridPane>
        <Button fx:id="runActionButton" mnemonicParsing="false" onAction="#runActionButtonOnAction"
                text="Aktion durchführen" GridPane.halignment="RIGHT" GridPane.rowIndex="2"
                GridPane.valignment="BOTTOM"/>
        <Label text="Aktionen"/>
        <Button fx:id="backToImportButton" mnemonicParsing="false" onAction="#backToImportButtonOnAction" text="Zurück"
                GridPane.halignment="LEFT" GridPane.rowIndex="2" GridPane.valignment="BOTTOM"/>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</GridPane>
