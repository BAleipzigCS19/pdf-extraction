<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../css/ViewStylesheet.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.baleipzig.pdfextraction.client.controller.ImportController">
   <top>
       <fx:include fx:id="menuBar" source="MenuBar.fxml" />
   </top>
    <center>
      <GridPane prefHeight="772.5" prefWidth="1050.0">
          <columnConstraints>
              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          </columnConstraints>
          <rowConstraints>
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          </rowConstraints>
          <children>
              <AnchorPane>
                  <children>
                      <fx:include fx:id="pdfPreview" source="PdfPreview.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                  </children>
              </AnchorPane>
              <GridPane prefHeight="481.0" prefWidth="363.0" GridPane.columnIndex="1">
                  <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" />
                  </columnConstraints>
                  <rowConstraints>
                      <RowConstraints maxHeight="723.0" minHeight="65.0" prefHeight="711.7669067382812" />
                      <RowConstraints maxHeight="76.88677978515625" minHeight="0.0" prefHeight="41.23309326171875" vgrow="SOMETIMES" />
                  </rowConstraints>
                  <children>
                  <VBox prefHeight="709.0" prefWidth="505.0">
                     <children>
                        <VBox prefHeight="175.0" prefWidth="505.0">
                           <children>
                                      <Label fx:id="templateHeader" styleClass="header" text="%templatesHeader" />
                              <HBox prefHeight="100.0" prefWidth="200.0">
                                 <children>
                                            <JFXComboBox fx:id="templateComboBox" onAction="#selectTemplateOnAction" prefHeight="25.0" prefWidth="168.0" promptText="%templateComboBox" styleClass="check-box" />
                                    <ProgressIndicator fx:id="progress" maxHeight="25.0" maxWidth="-Infinity" prefHeight="25.0" prefWidth="25.0" visible="false">
                                       <HBox.margin>
                                          <Insets left="10.0" />
                                       </HBox.margin>
                                    </ProgressIndicator>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        <VBox prefHeight="535.0" prefWidth="505.0">
                           <children>
                                    <Label fx:id="collectedDataHeader" visible="false" styleClass="header" text="%collectedDataHeader">
                                        <padding>
                                            <Insets bottom="10.0" />
                                        </padding>
                                    </Label>
                                  <ScrollPane fitToWidth="true" styleClass="scroll-pane">
                                 <content>
                                    <VBox fx:id="dataContent" />
                                 </content>
                                  </ScrollPane>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                      <JFXButton fx:id="continueButton" mnemonicParsing="false" onAction="#continueButtonOnAction" styleClass="button-blue" text="%continueButton" GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.valignment="BOTTOM" />
                  </children>
                  <padding>
                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
              </GridPane>
          </children>
      </GridPane>
   </center>
</BorderPane>
