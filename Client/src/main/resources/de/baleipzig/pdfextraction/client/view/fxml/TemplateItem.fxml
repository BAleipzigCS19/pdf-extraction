<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane prefHeight="60.0" prefWidth="1040.0" styleClass="template-item" stylesheets="@../css/ViewStylesheet.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.baleipzig.pdfextraction.client.controller.TemplateItemController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <VBox alignment="CENTER_LEFT" prefHeight="82.0" prefWidth="201.0">
         <children>
            <Label fx:id="templatename" styleClass="item-templatename" text="HUK-Autoversicherung" />
            <Label fx:id="versicherung" styleClass="item-versicherung" text="HUK" />
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="44.0" prefWidth="235.0" GridPane.columnIndex="1">
         <children>
            <JFXButton fx:id="editButton" styleClass="item-button" />
            <JFXButton fx:id="deleteButton" styleClass="item-button">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </JFXButton>
         </children>
      </HBox>
   </children>
</GridPane>
